@{
  Layout = "_Layout";
}

@model LarryDavid.Models.Episode

<h2>Update episode @Model.SeasonEpisode from @Model.Show</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.EpisodeId)
  @Html.HiddenFor(model => model.Show)
  @Html.HiddenFor(model => model.SeasonEpisode)
  
  @Html.Label("Joke")
  @Html.DropDownList("ThemeId")

  <input type="submit" value="Save" class="btn btn-primary">
}