@{
  Layout = "_Layout";
}

@model LarryDavid.Models.Episode

<h2>Update episode</h2>

@using(Html.BeginForm())
{
  @Html.HiddenFor(model => model.EpisodeId)

  @Html.LabelFor(model => model.Show)
  @Html.TextBoxFor(model => model.Show)

  @Html.Label("Season/Episode use format: S01E23")
  @Html.TextBoxFor(model => model.SeasonEpisode)

  <input type="submit" value="Save" class="btn btn-primary">
}